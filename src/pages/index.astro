<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Business Card Editor</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f4f4f4;
    }
    h2 {
      color: #333;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    .card {
      max-width: 318px;
      border: 1px solid #ccc;
      padding: 15px;
      background-color: #fff;
      margin-bottom: 20px;
    }
    .card img {
      width: 80px;
      height: 80px;
      display: block;
      border: 0;
    }
    .form-group {
      margin-bottom: 15px;
    }
    .form-group label {
      display: block;
      margin-bottom: 5px;
    }
    .form-group input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .submit-btn, .copy-btn {
      padding: 10px 15px;
      background-color: #00a8e2;
      color: #fff;
      border: none;
      cursor: pointer;
      margin-top: 10px;
      border-radius: 4px;
    }
    .copy-btn {
      background-color: #4CAF50;
    }
    .output-area {
      margin-top: 20px;
      padding: 15px;
      background-color: #eaeaea;
      border-radius: 5px;
    }
  </style>
</head>
<body>

<div class="container">
  <h2>Edit Business Card</h2>

  <form id="editor-form">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" id="name" value="John Doe">
    </div>
    <div class="form-group">
      <label for="title">Job Title</label>
      <input type="text" id="title" value="Software Engineer">
    </div>
    <div class="form-group">
      <label for="phone">Telephone Number</label>
      <input type="tel" id="phone" value="+123 456 7890">
    </div>
    <div class="form-group">
      <label for="linkedin">LinkedIn URL</label>
      <input type="url" id="linkedin" value="https://www.linkedin.com/in/johndoe/">
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      <input type="url" id="image" value="https://via.placeholder.com/80">
    </div>
    <button type="submit" class="submit-btn">Update Card</button>
    <button type="button" class="copy-btn" onclick="copyHTML()">Copy HTML</button>
  </form>

  <h2>Business Card Preview</h2>
  <table cellspacing="0" cellpadding="0" border="0" style="border-collapse:separate;table-layout:fixed;overflow-wrap:break-word;word-wrap:break-word;word-break:break-word;max-width:318px;" width="280" class="card" id="card-preview">
    <tbody>
      <tr>
        <td style="width: 80px; vertical-align: middle;">
          <img id="card-image" src="https://via.placeholder.com/80" alt="">
        </td>
        <td style="color:#555555;font-size:12px; vertical-align: middle; padding-left:15px; padding-top:10px; padding-bottom:10px;">
          <p style="margin:5px 0; line-height: 1;">
            <span id="card-name" style="font-weight: bold; font-size: 20px;"><font color="#000000">John Doe&nbsp;</font></span>
          </p>
          <p id="card-title" style="margin:5px 0; line-height: 1;">
            <font color="#555555">Software Engineer</font>
          </p>
          <p id="card-phone" style="margin:5px 0; line-height: 1;">
            <a href="tel:+1234567890" style="color:#666666;text-decoration:none;" target="_blank">+123 456 7890</a>
          </p>
          <p style="margin:5px 0; line-height: 1;">
            <a href="https://www.linkedin.com/in/johndoe/" style="color:#00a8e2;text-decoration:none;" target="_blank">www.example.com</a>
          </p>
          <p style="margin:5px 0; line-height: 1;">
            <a id="card-linkedin" href="https://www.linkedin.com/in/johndoe/" target="_blank" style="display:inline-block;vertical-align:middle;">
              <img src="https://org59941.icns.email/buttons/linkedin3-small-000000-FFFFFF-FFFFFF-round-left.png" width="101" height="22" alt="Let's Connect">
            </a>
          </p>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<script>
  const form = document.getElementById('editor-form');

  form.addEventListener('submit', function(event) {
    event.preventDefault();

    // Get values from the form
    const name = document.getElementById('name').value;
    const title = document.getElementById('title').value;
    const phone = document.getElementById('phone').value;
    const linkedin = document.getElementById('linkedin').value;
    const image = document.getElementById('image').value;

    // Update the business card
    document.getElementById('card-name').innerHTML = `<font color="#000000">${name}&nbsp;</font>`;
    document.getElementById('card-title').innerHTML = `<font color="#555555">${title}</font>`;
    document.getElementById('card-phone').innerHTML = `<a href="tel:${phone}" style="color:#666666;text-decoration:none;" target="_blank">${phone}</a>`;
    document.getElementById('card-linkedin').href = linkedin;
    document.getElementById('card-image').src = image;
  });

  function copyHTML() {
    const cardHTML = document.getElementById('card-preview').outerHTML;
    const textarea = document.createElement('textarea');
    textarea.value = cardHTML;
    document.body.appendChild(textarea);
    textarea.select();
    document.execCommand('copy');
    document.body.removeChild(textarea);
    alert('Business card HTML copied to clipboard!');
  }
</script>

</body>
</html>
